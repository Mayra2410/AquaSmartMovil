<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo02"
    tools:context=".LoginAquaSmart">

    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="480dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/diseredondo"
        android:backgroundTint="#7A000000"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView2"
            android:layout_width="272dp"
            android:layout_height="129dp"
            android:padding="22dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="2dp"
            android:paddingRight="2dp"
            android:src="@drawable/wired_lineal_21_avatar_morph_group" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio de sesión"
            android:textAlignment="center"
            android:textColor="#EDE3E3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/imageView4"
                android:layout_width="44dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:src="@drawable/wired_lineal_21_avatar_hover_jumping" />

            <EditText
                android:id="@+id/txtUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EDE2E2"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="text"
                android:textColor="#F0EAEA"
                android:textColorHint="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/imageView7"
                android:layout_width="40dp"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:src="@drawable/wired_lineal_35_edit_hover_circle" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="#F4F1F1"
                android:textColorHint="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSesion"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#4F769B"
            android:text="Iniciar sesión "
            android:textColor="@color/white"
            android:textColorLink="#3D7DBD"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Quieres registrarte?"
            android:textAlignment="center"
            android:textColor="#F5F6FA"
            android:textColorLink="#1976D2"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>