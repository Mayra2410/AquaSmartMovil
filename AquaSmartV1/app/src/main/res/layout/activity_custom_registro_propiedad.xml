<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroPropiedad">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/diseredondo"
            android:backgroundTint="#082338"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de Propiedad"
                android:textAlignment="center"
                android:textColor="#EDE3E3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Foto de la propiedad -->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/imgPropiedad"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/wired_lineal_61_camera_hover_flash" />

            <Button
                android:id="@+id/btnSeleccionarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seleccionar Foto"
                android:backgroundTint="#B0C4C4"
                android:textColor="@android:color/black" />

            <!-- Ruta de la imagen -->
            <TextView
                android:id="@+id/tvImagePath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ninguna imagen seleccionada"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="center" />

            <!-- Campos de dirección -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtNumExt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Número exterior"
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/txtNumInt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Número interior (opcional)"
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <EditText
                android:id="@+id/txtCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Calle"
                android:inputType="textCapWords"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA" />

            <EditText
                android:id="@+id/txtColonia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Colonia"
                android:inputType="textCapWords"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA" />

            <EditText
                android:id="@+id/txtCodigoPostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Código Postal"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA" />

            <!-- Campos de coordenadas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtLatitud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Latitud"
                    android:inputType="text|textNoSuggestions"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/txtLongitud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Longitud"
                    android:inputType="text|textNoSuggestions"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <!-- Spinner para ciudad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ciudad:"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/spinnerCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- Spinner para medidor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Medidor:"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/spinnerMedidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRegistrarPropiedad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#B0C4C4"
                    android:text="Registrar"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCancelarPropiedad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#B0C4C4"
                    android:text="Cancelar"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>